%%-*- mode: erlang -*-
{lib_dirs,            [ ".."
                      , "deps"
                      ]}.
{erl_opts,            [ debug_info
                      , warn_unused_vars
                      , warn_shadow_vars
                      , warn_unused_import
                      , warn_export_all
                      , warn_export_vars
                      , warn_obsolete_guard
                      , warn_untyped_record
                      , warnings_as_errors
                      ]}.
{cover_enabled,       true}.
{cover_print_enabled, true}.
{xref_checks,         [ fail_on_warning
                      , undefined_function_calls
                      ]}.
{xref_warnings,       true}.
{deps_dir,            [ "deps"
                      ]}.
{deps,
 [ { mochijson3
   , ".*"
   , {git, "git://github.com/tophitpoker/mochijson3.git",
      {tag, "1a1c913ac80bb45d3de5fbd74d21e96c45e9e844"}}
   }
 , { lhttpc
   , ".*"
   , {git, "git://github.com/esl/lhttpc.git",
      {tag, "a38677043ce11f12c143aec36c9147ca23197302"}}
   }
 , { neotoma
   , ".*"
   , { git
     , "git://github.com/seancribbs/neotoma.git"
     , {tag, "c22aae1eaffe6911f1fd4325871c90c3ad7aaf3d"}
     }
   }
  , { meck
    , ".*"
    , { git
      , "https://github.com/eproxus/meck.git"
      , {tag, "4b085043972dee845fc3dd6f3a1926df4e39ed3d"}
      }
    }
 ]}.
{pre_hooks, [{compile, "./priv/compile-parser"}]}.
