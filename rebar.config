%%-*- mode: erlang -*-
{lib_dirs,            [ "deps"
                      ]}.
{erl_opts,            [ debug_info
                      , warn_unused_vars
                      , warn_shadow_vars
                      , warn_unused_import
                      , warnings_as_errors
                      ]}.
{cover_enabled,       true}.
{cover_print_enabled, true}.
{xref_checks,         [ fail_on_warning
                      , undefined_function_calls
                      ]}.
{xref_warnings,       true}.
{deps_dir,            [ "deps"
                      ]}.
{deps,
 [ { mochiweb
   , ".*"
   , {git, "git://github.com/mochi/mochiweb.git",
      {branch, "master"}}
   }
 , { lhttpc
   , ".*"
   , {git, "git://github.com/esl/lhttpc.git",
      {branch, "master"}}
   }
 , { katt_blueprint
   , ".*"
   , {git, "gitosis@git.internal.machines:zz/isak/erl-katt-blueprint-parser.git",
      {branch, "master"}}
   }
 ]}.
