%%-*- mode: erlang -*-
{lib_dirs,            [ "deps"
                      ]}.
{erl_opts,            [ debug_info
                      , warn_unused_vars
                      , warn_shadow_vars
                      , warn_unused_import
                      , warn_export_all
                      , warn_export_vars
                      , warn_obsolete_guard
                      , warn_untyped_record
                      %% TODO: Figure out a way to clean up the
                      %% neotoma-generated erlang code in a good way:
                      %, warnings_as_errors
                      ]}.
{cover_enabled,       true}.
{cover_print_enabled, true}.
{xref_checks,         [ fail_on_warning
                      , undefined_function_calls
                      ]}.
{xref_warnings,       true}.
{deps_dir,            [ "deps"
                      ]}.
{deps,
 [ { mochiweb
   , ".*"
   , {git, "git://github.com/mochi/mochiweb.git",
      {branch, "master"}}
   }
 , { lhttpc
   , ".*"
   , {git, "git://github.com/esl/lhttpc.git",
      {branch, "master"}}
   }
 , { neotoma
   , "1.6.0"
   , { git
     , "git://github.com/seancribbs/neotoma.git"
     , {tag, "1.6.0"}
     }
   }
 ]}.
